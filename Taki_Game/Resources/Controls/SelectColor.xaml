<Window x:Class="Taki_Game.Resources.Controls.SelectColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taki_Game.Resources.Controls"
        mc:Ignorable="d"
        Title="SelectColor" Height="99" Width="164" Name="Color_Window">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Name="Red" Content="Red" Background="Red" Tag="R_"  Click="Color_select_Click" FontSize="15"/>
        <Button Grid.Column="1" Grid.Row="0" Name="Yellow" Content="Yellow" Background="Yellow" Tag="Y_" Click="Color_select_Click" FontSize="15"/>
        <Button Grid.Column="0" Grid.Row="1" Name="Blue" Content="Blue" Background="Blue" Tag="B_" Click="Color_select_Click" FontSize="15"/>
        <Button Grid.Column="1" Grid.Row="1" Name="Green" Content="Green" Background="Green" Tag="G_" Click="Color_select_Click" FontSize="15"/>
    </Grid>
</Window>
