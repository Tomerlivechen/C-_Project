<Window x:Class="Memory_game.MemoryGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_game"
        Icon="pack://application:,,,/Resources/Indexicon.ico"
        mc:Ignorable="d"
        Title="MemoryGameWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="1"  Source="/Resources/BG_Image.jpg" Stretch="Fill" Name="BG_Image"/>
        <Rectangle Grid.Column="0" Grid.Row="0" Fill="Black" />
        <Viewbox Grid.Row="1" >
        <WrapPanel Name="Card_set" Margin="10" HorizontalAlignment="Center" ></WrapPanel>
        </Viewbox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="Time: " FontSize="24" Foreground="White" FontWeight="ExtraBold" />
            <TextBlock Name="Time_keeper" Text="0" FontSize="24" Foreground="White" FontWeight="ExtraBold" />
            <TextBlock  Text=" Seconds" FontSize="24" Foreground="White" FontWeight="ExtraBold" />

            </StackPanel>
    </Grid>
</Window>
