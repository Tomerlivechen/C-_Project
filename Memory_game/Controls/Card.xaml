<UserControl x:Class="Memory_game.Controls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memory_game.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="Card_Button" Grid.RowSpan="3" Tag="{Binding Pic}" IsEnabled="{Binding Found}">
            <Image Source="{Binding VisibleImage}" Grid.RowSpan="3" Stretch="Fill"/>
        </Button>
    </Grid>
</UserControl>
